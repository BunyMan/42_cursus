SRCS	= ft_push_swap.c ft_validation.c ft_lst.c ft_instructor.c \
ft_instructor_p.c ft_sorter.c ft_sorter_extras.c ft_sorter_extra_extras.c ft_split.c

SRCS_C	= ft_checker.c ft_validation.c ft_lst.c ft_instructor.c \
ft_instructor_p.c ft_sorter.c ft_sorter_extras.c ft_sorter_extra_extras.c \
ft_split.c ft_gnl.c

OBJS	= ${SRCS:.c=.o}
OBJS_C	= ${SRCS_C:.c=.o}

CC		= @cc
RM		= @rm -f

NAME	= push_swap
NAME_C	= checker

CFLAGS	= -Wall -Werror -Wextra

.c.o:
		${CC} ${CFLAGS} -c $< -o ${<:.c=.o}

all:	${NAME} ${NAME_C}

${NAME}:${OBJS}
		${CC} ${FLAGS} ${OBJS} -o ${NAME}
#		@say -r 350 "compiling push swap"
		@echo
		@printf "  \033[1;;32mLOADING |____________________|\r"
		@sleep 0.1
		@printf "  LOADING |##__________________|\r"
		@sleep 0.1
		@printf "  LOADING |####________________|\r"
		@sleep 0.1
		@printf "  LOADING |######______________|\r"
		@sleep 0.1
		@printf "  LOADING |########____________|\r"
		@sleep 0.1
		@printf "  LOADING |##########__________|\r"
		@sleep 0.1
		@printf "  LOADING |############________|\r"
		@sleep 0.1
		@printf "  LOADING |##############______|\r"
		@sleep 0.1
		@printf "  LOADING |################____|\r"
		@sleep 0.1
		@printf "  LOADING |##################__|\r"
		@sleep 0.1
		@printf "  LOADING |####################|\r"
		@sleep 0.3
		@printf "                                  \r"
		@printf "  >>-----------DONE----------<<\r"
		@sleep 0.1
		@printf "  >>>>---------DONE--------<<<<\r"
		@sleep 0.1
		@printf "  >>>>>>-------DONE------<<<<<<\r"
		@sleep 0.1
		@printf "  >>>>>>>>-----DONE-----<<<<<<<\r"
		@sleep 0.1
		@printf "  >>>>>>>>>>---DONE---<<<<<<<<<\r"
		@sleep 0.1
		@printf "  >>>>>>>>>>>>-DONE-<<<<<<<<<<<\r"
		@sleep 0.1
		@printf "  >>-----------DONE----------<<\r"
		@sleep 0.1
		@printf "  >>>>---------DONE--------<<<<\r"
		@sleep 0.1
		@printf "  >>>>>>-------DONE------<<<<<<\r"
		@sleep 0.1
		@printf "  >>>>>>>>-----DONE-----<<<<<<<\r"
		@sleep 0.1
		@printf "  >>>>>>>>>>---DONE---<<<<<<<<<\r"
		@sleep 0.1
		@printf "  >>>>>>>>>>>>-DONE-<<<<<<<<<<<\r"
		@sleep 0.3
		@printf "                                    \r"
		@printf "\033[2;32m               DONE!            \r"
		@sleep 0.7
		@printf "\033[1;;32m               DONE! \n"
		@sleep 0.8

#		@say -r 350 "compiling is done, have fun pushing and swapping"

${NAME_C}:${OBJS_C}
		${CC} ${FLAG_S} ${OBJS_C} -o ${NAME_C}

clean:
		${RM} ${OBJS}
		${RM} ${OBJS_C}

fclean:	clean
		${RM} ${NAME}
		${RM} ${NAME_C}
		@printf "\033[1;91m       REMOVING ALL .o FILES\r"
		@sleep 0.5
		@printf "       REMOVING ALL .o FILES .\r"
		@sleep 0.5
		@printf "       REMOVING ALL .o FILES . . \r"
		@sleep 0.5
		@printf "       REMOVING ALL .o FILES . . . \r"
		@sleep 0.5
		@printf "                                     \r"
		@printf "\033[1;;32m               DONE!\n"
#		@say "done"
				


re:		fclean all

ap:		all fclean

parrot:
	@curl parrot.live

